<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_new_home"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_new_home"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        app:layout_constraintRight_toRightOf="@id/iv_new_home"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/iv_new_home"
        app:layout_constraintTop_toBottomOf="@id/iv_new_home" />

    <TextView
        android:id="@+id/tv_price_home"
        android:layout_width="wrap_content"
        android:textColor="#CD1111"
        android:textSize="@dimen/sp_15"
        app:layout_constraintRight_toRightOf="@id/iv_new_home"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/iv_new_home"
        app:layout_constraintTop_toBottomOf="@id/tv_new_home" />

</androidx.constraintlayout.widget.ConstraintLayout>