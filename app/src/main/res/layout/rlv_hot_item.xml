<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_hot"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"/>
    <TextView
        android:paddingTop="@dimen/dp_30"
        android:id="@+id/tv_hot_name"
        android:text="1515"
        android:textColor="#000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toTopOf="@id/iv_hot"
        app:layout_constraintLeft_toRightOf="@id/iv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_brief"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_hot_price"
        app:layout_constraintLeft_toLeftOf="@id/tv_brief"
        app:layout_constraintTop_toBottomOf="@id/tv_brief"
        android:layout_width="wrap_content"
        android:textColor="#BC2525"
        android:textSize="@dimen/sp_18"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>