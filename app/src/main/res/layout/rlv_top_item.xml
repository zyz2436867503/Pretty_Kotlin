<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:textColor="#000"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="@id/iv_top"
        app:layout_constraintTop_toBottomOf="@id/iv_top" />

    <TextView
        android:id="@+id/tv_top_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="#C52424"
        app:layout_constraintLeft_toRightOf="@id/tv_top_title"
        app:layout_constraintTop_toTopOf="@id/tv_top_title" />

    <TextView
        android:id="@+id/tv_top_subtitile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="@id/tv_top_title"
        app:layout_constraintTop_toBottomOf="@id/tv_top_title" />

</androidx.constraintlayout.widget.ConstraintLayout>